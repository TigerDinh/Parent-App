<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ParentApp" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_theme_dark</item>
        <item name="colorPrimaryVariant">@color/primary_theme_darker</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="TextAppearance.AppCompat.Base">
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">@color/main_text</item>
    </style>

    <style name="TextAppearance.AppCompat.White">
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.ParentApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ParentApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ParentApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>